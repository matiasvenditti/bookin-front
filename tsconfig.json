{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".next",
    ".idea",
    ".vscode"
  ],
  "include": [
    "src/**.*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "paths": {
    "model/*": [
      "./src/model/*"
    ]
  }
}